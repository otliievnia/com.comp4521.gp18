<resources>

    <style name="AppTheme" parent="MaterialAppTheme" />

    <style name="MaterialAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ListTitleLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListSubValueTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarThemeTitle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="FormLabels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:padding">@dimen/formLabelPadding</item>
    </style>

    <style name="MyProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@null</item>
    </style>
</resources>
