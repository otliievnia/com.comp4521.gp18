<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MissingPets">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@drawable/background_yellow"
            android:elevation="10dp"
            android:layout_height="60dp">

            <RelativeLayout
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/nunito"
                    android:gravity="center_vertical|left"
                    android:text="Missing Pets"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:gravity="right"
                    android:src="@drawable/house" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
        <!-- TODO: Update blank fragment layout -->
        <fragment
            android:id="@+id/map_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

        <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:background="@drawable/bottomsheet_background"
            android:elevation="1dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <ImageView
                android:id="@+id/bar"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_remove"
                android:tint="@color/blue" />

            <LinearLayout
                android:id="@+id/filter"
                android:layout_below="@id/bar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="10"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/missing_dog_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.8"
                    android:background="@drawable/background_yellow_whole"
                    android:drawableLeft="@drawable/dog_filter_small"
                    android:elevation="4dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="left"
                    android:paddingHorizontal="10dp"
                    android:text="Dog"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/missing_cat_btn"
                    android:elevation="4dp"
                    android:background="@drawable/background_yellow_whole"
                    android:layout_weight="2.8"
                    app:backgroundTint="@null"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="40dp"
                    android:text="Cat"
                    android:fontFamily="@font/roboto"
                    android:paddingHorizontal="10dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/cat_filter_small" />

                <Button
                    android:id="@+id/missing_others_btn"
                    android:elevation="4dp"
                    android:background="@drawable/background_yellow_whole"
                    android:layout_weight="2.8"
                    app:backgroundTint="@null"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="More"
                    android:fontFamily="@font/roboto"
                    android:paddingHorizontal="6dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/dog_filter_small" />

                <Button
                    android:layout_width="0dp"
                    android:elevation="0dp"
                    android:drawableTint="@color/blue"
                    android:stateListAnimator="@null"
                    android:drawableLeft="@drawable/ic_filter_icon"
                    app:backgroundTint="@color/transparent"
                    android:layout_weight="1.5"
                    android:layout_height="40dp" />
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_marginTop="90dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_employeeList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.core.widget.NestedScrollView>
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>